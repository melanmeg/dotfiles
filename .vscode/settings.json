{
  // ================================
  // General Settings
  // ================================
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.autoIndent": "full",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": false,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.formatOnType": false,
  "editor.insertSpaces": true,
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "comments": false,
    "other": true,
    "strings": false
  },
  "editor.renderWhitespace": "boundary",
  "editor.stickyTabStops": true,
  "editor.tabSize": 2,
  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": true,
  "telemetry.telemetryLevel": "off",
  "window.zoomLevel": -0.7,
  "workbench.colorTheme": "Monokai",
  "workbench.editor.languageDetection": false,
  "workbench.editor.tabActionLocation": "left",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",

  // ================================
  // Font Settings
  // ================================
  "editor.fontFamily": "\"Source Han Code JP\"",
  "editor.fontLigatures": true,

  // ================================
  // Background Settings
  // ================================
  "background.fullscreen": {
    "images": ["file:///C:/myroot/img/hoge13.jpg"], // urls of your images
    "opacity": 0.91, // 0.85 ~ 0.95 recommended
    "size": "cover", // also css, `cover` to self-adaption (recommended)，or `contain`、`200px 200px`
    "position": "center", // alias to `background-position`, default `center`
    "interval": 0 // seconds of interval for carousel, default `0` to disabled.
  },

  // ================================
  // Files Settings
  // ================================
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true,
    "**": true
  },
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.autoGuessEncoding": false,

  // ================================
  // Extension Settings
  // ================================
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "remote.SSH.enableRemoteCommand": true,
  "prettier.tabWidth": 2,
  "remote-explorer.foldersSortOrder": "alphabetical",
  "search.quickOpen.includeHistory": false,
  "shellcheck.customArgs": ["-x"],
  "shellcheck.enable": true,
  "shellcheck.enableQuickFix": true,
  "shellformat.effectLanguages": [
    "azcli",
    "bats",
    "dockerfile",
    "dotenv",
    "gitignore",
    "hosts",
    "ignore",
    "jvmoptions",
    "properties",
    "spring-boot-properties"
  ],
  "shellformat.path": "/usr/bin/shfmt",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.windows": "Git Bash",

  // ================================
  // Python Settings
  // ================================
  "autopep8.args": ["--indent-size=2"],
  "black-formatter.args": ["--line-length=100"],
  "flake8.args": ["--max-line-length=100"],
  "isort.args": ["--profile", "black"],
  "python.analysis.diagnosticSeverityOverrides": {
    "reportMissingImports": "none"
  },

  // ================================
  // Ansible Settings
  // ================================
  "ansible.validation.lint.enabled": false,

  // ================================
  // Github Copilot Settings
  // ================================
  "github.copilot.chat.localeOverride": "ja",

  // ================================
  // Language Associations
  // ================================
  "files.associations": {
    // .conf
    "default.conf": "nginx",
    "nginx.conf": "nginx",
    "nftables.conf": "nft",
    // .yml, .yaml
    "docker-compose.yaml": "dockercompose",
    "compose.yaml": "dockercompose",
    "docker-compose.yml": "dockercompose",
    "compose.yml": "dockercompose",
    "site.yml": "ansible",
    "**/playbooks/*.yml": "ansible",
    "**/tasks/*.yml": "ansible",
    "*.yaml": "yaml",
    "*.yml": "yaml",
  },

  // ================================
  // Launguage Settings
  // ================================
  "[python]": {
    // "editor.defaultFormatter": "ms-python.autopep8",
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "[go]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.formatOnSave": true,
  },
  "[NGINX]": {
    "editor.formatOnType": false
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "edtor.formatOnSave": false
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[hosts]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.formatOnSave": true,
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker",
    "editor.formatOnSave": true,
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.formatOnSave": true,
  },
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.formatOnSave": true,
  },
  "[ssh_config]": {
    "editor.formatOnSave": true,
  },
  "[ansible-jinja]": {
    "editor.formatOnSave": true,
  },
  "[ansible]": {
    "editor.formatOnSave": true,
  },
  "[nft]": {
    "editor.formatOnSave": true,
  },
}
